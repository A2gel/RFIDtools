<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_50"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_act_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/toolbarStyle"
        app:popupTheme="@style/popMenuStyle"
        app:title="设备切换" />

    <RadioGroup
        android:id="@+id/rdoGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp">

        <RadioButton
            android:id="@+id/rdoBtnPN53X"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_radio_selector_white"
            android:button="@null"
            android:drawableEnd="@drawable/pn53x"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="PN53X系列" />

        <RadioButton
            android:id="@+id/rdoBtnPM3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_radio_selector_white"
            android:button="@null"
            android:drawableEnd="@drawable/proxmark3"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Proxmark3系列" />

        <RadioButton
            android:id="@+id/rdoBtnCML"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_radio_selector_white"
            android:button="@null"
            android:drawableEnd="@drawable/chameleon"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="变色龙系列" />

        <RadioButton
            android:id="@+id/rdoBtnSTD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_radio_selector_white"
            android:button="@null"
            android:drawableEnd="@drawable/ic_launcher_bg_grey_transparent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="自带NFC系列" />

    </RadioGroup>

</LinearLayout>